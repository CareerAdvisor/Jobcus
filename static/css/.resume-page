/* =========================================================
   Resume Base (A4 + shared styles for all themes)
   ========================================================= */
:root{
  /* A4 page + spacing */
  --page-w: 210mm;
  --page-h: 297mm;
  --page-pad: 16mm;

  /* Palette & type */
  --text: #111;
  --muted: #5b6773;
  --rule: #e6e8eb;
  --accent: #104879;           /* may be overridden by theme */
  --font: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Noto Sans", sans-serif;

  /* Sizing */
  --h1: 18pt;      /* name */
  --h2: 11.5pt;    /* section headings */
  --body: 11pt;
  --small: 10pt;
  --line: 1.35;
}

html, body{
  background:#f4f6f8;
  color:var(--text);
  font: var(--body)/var(--line) var(--font);
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
  margin:0;
  padding:0;
}

/* A4 canvas */
.resume-page{
  box-sizing:border-box;
  width:var(--page-w);
  min-height:var(--page-h);
  margin:12px auto;
  background:#fff;
  /* REMOVE this next line (WeasyPrint doesn't support box-shadow):
     box-shadow:0 4px 20px rgba(0,0,0,.08); */
  padding:var(--page-pad);
  overflow:hidden;
}

/* Basic structure */
.resume-header{ margin-bottom:10mm; }
.resume-name{ font-size:var(--h1); font-weight:700; color:var(--accent); line-height:1.15; }
.resume-title{ font-size:10.5pt; color:var(--muted); margin-top:2mm; }
.resume-contact{ margin-top:3mm; color:var(--muted); font-size:var(--small); display:flex; flex-wrap:wrap; gap:6px 14px; }

.section{ margin-top:7mm; break-inside: avoid; page-break-inside: avoid; }
.section h2{ font-size:var(--h2); margin:0 0 4mm; color:var(--accent); letter-spacing:.02em; }
.rule{ height:1px; background:var(--rule); margin:3.5mm 0 0; }

/* Lists */
.ul, ul{ margin:0; padding-left:5mm; }
.li, li{ margin:1.4mm 0; }

/* Experience/Education items */
.item{ margin:0 0 5mm; }
.item-header{
  display:flex; align-items:flex-start; justify-content:space-between; gap:10px;
  flex-wrap:wrap;
}
.item-title{ font-weight:700; }
.item-meta{ color:var(--muted); font-size:var(--small); }

.bullets{ margin:2mm 0 0 5mm; }
.bullets li{ margin:1.4mm 0; }

/* Chips for skills */
.skills{ display:flex; flex-wrap:wrap; gap:6px; margin-top:2mm; }
.chip{
  border:1px solid var(--rule);
  background:#f7f9fb;
  border-radius:999px;
  font-size:9.5pt;
  padding:4px 8px;
}

/* Two-column helper (optional for some sections) */
.grid-2{
  display:grid;
  grid-template-columns:1fr 1fr;
  gap:8mm 6mm;
}
@media screen and (max-width: 900px){
  .grid-2{ grid-template-columns:1fr; }
}

/* Links */
a{ color:inherit; text-decoration:underline; text-decoration-thickness: from-font; }
a:hover{ text-decoration:none; }

/* A4 canvas */
.resume-page{
  box-sizing:border-box;
  width:var(--page-w);
  min-height:var(--page-h);
  margin:12px auto;
  background:#fff;
  /* REMOVE this next line (WeasyPrint doesn't support box-shadow):
     box-shadow:0 4px 20px rgba(0,0,0,.08); */
  padding:var(--page-pad);
  overflow:hidden;
}

/* Print: force A4 + set margins for PDF/print explicitly */
@page{
  size: A4;
  margin: 0.075in; /* = 0.075 inches on all sides */
}

/* Print tweaks */
@media print{
  html, body{ background:#fff; }
  .resume-page{
    width:auto;
    min-height:auto;
    margin:0;
    box-shadow:none;   /* ensure no shadow in print */
    padding:0;         /* IMPORTANT: avoid double margins; margins come from @page */
  }
  .no-print{ display:none !important; }
  a{ text-decoration:none; }
}

/* Screen responsiveness: keep mobile tidy */
@media screen and (max-width: 768px){
  .resume-page{
    width:100%;
    min-height:auto;
    margin:0;
    box-shadow:none;
    padding:12mm;
  }
}

/* Screen-only shadow so WeasyPrint never sees it */
@media screen {
  .resume-page { box-shadow: 0 4px 20px rgba(0,0,0,.08); }
}

/* Page-break utilities (WeasyPrint supports modern break-* props) */
.page-break{ break-before: page; page-break-before: always; }
.avoid-break{ break-inside: avoid; page-break-inside: avoid; }

/* Small helpers */
.muted{ color:var(--muted); }
.small{ font-size: var(--small); }

/* ==== Resume content rules (used by templates) ==== */

/* Tight, consistent section spacing (removes gap after Skills) */
.resume .section { margin: 10px 0; }
.resume .rule    { margin: 6px 0 8px; }

/* Skills sits tight to summary; can split if needed */
.skills-section  { margin-bottom: 6px; break-inside: auto; page-break-inside: auto; }

/* Experience flow: allow splitting so bullets can roll to next page */
.experience-section { break-inside: auto; page-break-inside: auto; }
.experience-section .item { break-inside: auto; page-break-inside: auto; margin-bottom: 10px; }

/* Keep the title line and date line together with the header,
   but don't block bullets from splitting across pages */
.item-title-line,
.item-dates { break-after: avoid; page-break-after: avoid; }

/* Bullets may split (prevents big white gaps) */
.experience-section .bullets li { break-inside: auto; page-break-inside: auto; }

/* Basic styling for the two lines */
.item-title-line { font-weight: 700; font-size: 1.05rem; }
.item-dates      { color: #6b7280; margin: 2px 0 6px; }

:root{
  /* ... */
  --page-pad: 19mm; /* was 16mm */
}

/* No shadow for PDF/print; add it only for screen */
.resume-page { /* no box-shadow here for print */ }

@media screen {
  .resume-page { box-shadow: 0 4px 20px rgba(0,0,0,.08); }
}

@media screen and (max-width: 900px){
  .grid-2{ grid-template-columns:1fr; }
}

@media screen and (max-width: 768px){
  .resume-page{
    width:100%;
    min-height:auto;
    margin:0;
    box-shadow:none; /* screen mobile override is fine */
    padding:12mm;
  }
}


